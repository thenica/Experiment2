//This program will draw a box using "*" characters given its dimensions

#include <iostream>
#include <string>
using namespace std;

int main ()

{
	int rows, columns,x, y;
	
	cout << "How many rows?: "; cin>> rows;
	cout << "How many columns?: "; cin>> columns;

	for (x=0;x<rows;x++)
		{
				cout <<"\n";
			for (y=0;y<columns;y++)
				{
					cout << "*"; 
				
				}
			
		}	
return 0;	
}
